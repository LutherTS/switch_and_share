<div class="container-banner">
  <div class="banner-index" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1577583113753-ca7e95d1bdc6?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80);">
      <div class="container">
        <h1><strong>See all available games !</strong></h1>
      </div>
  </div>
</div>

<div class="list-infos">
  <p><%= "Games (#{@games.count})" %></p>
  <p><%= link_to "Add a game", new_game_path, class:'btn btn-flat home-button', id:'add-game-button' %></p>
</div>

<div class="container-games-list">
  <div class="col-12">
    <div class="cards">
      <% @games.sort.reverse.each do |game| %>
      <!-- or @games.sort.each -->
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= game.photos.attached? ? cl_image_path(game.photos[0].key) : asset_path('switch_console.jpeg') %>)">
          <div class="card-infos">
            <%= link_to game_path(game) do %>
             <h2 class='game-title' ><%= game.name %></h2>
            <% end %>
            <div class="sub-infos">
              <p><%= "Platform: #{game.platform}" %></p>
              <p><%= "Genre: #{game.category}" %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%#= cl_image_tag @game.photos[0].key %>
